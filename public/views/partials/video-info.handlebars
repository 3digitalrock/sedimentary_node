<div class="vid_info row">
  <div class="medium-8 columns">
    <h1 class="vid_title">{{video.title}}</h1>
    <div class="vid_studio">{{video.studio.name}}</div>
  </div>
  <div class="medium-4 columns">
    {{#unless video.type}}<div>{{#if video.views}}~{{video.views}}{{else}}0{{/if}} views</div>{{/unless}}
    <p class="vid_desc">{{video.description}}</p>
  </div>
</div>