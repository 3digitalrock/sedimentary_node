<div class="vid_info row">
  <div class="medium-10 columns">
    <h1 class="vid_title">{{video.title}}</h1>
    <div class="vid_studio">{{video.studio.name}}</div>
  </div>
  <div class="medium-2 columns" style="text-align:right;">
    {{#unless video.type}}<div style="margin-top:10px;">{{#if video.views}}~{{video.views}}{{else}}0{{/if}} views</div>{{/unless}}
  </div>
</div>
<div class="row">
  <div class="small-12 columns"><p class="vid_desc">{{video.description}}</p></div>
</div>