        {{#if error}}<div data-alert class="alert-box alert">
            {{error}} <a href="#" class="close">&times;</a>
        </div>{{/if}}
        <div class="form-box medium-6 columns" id="login-box">
            <h2>Sign In</h2>
            <form method="post" action="/login">
                <div class="body bg-gray">
                    <div class="form-group">
                        <input id="username" type="text" name="username" class="form-control" placeholder="User ID"/>
                    </div>
                    <div class="form-group">
                        <input id="password" type="password" name="password" class="form-control" placeholder="Password"/>
                    </div>
                </div>
                <div>                                                               
                    <input type="submit" value="Sign In" class="btn btn-block" />
                </div>
            </form>
        </div>
        
        <div class="medium-6 columns">
            <h3>Don't Have An Account Yet?</h3>
            <div>Account registration is coming soon.</div>
        </div>