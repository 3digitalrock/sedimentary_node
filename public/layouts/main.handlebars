    <header class="header large-12 columns">
      <div class="row">
        <div class="{{#if showVideo}}large-12 logo-overlay{{else}}small-5 small-centered{{/if}} columns"><a href="/" title="3 Digital Rock Studios" id="logo">3 Digital Rock Studios</a></div>
