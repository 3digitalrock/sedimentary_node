    <ul class="main-nav">
      <li class="nav-item {{#if atHome}}current{{/if}}"><a href="/">Home</a></li>
      <li class="nav-item {{#if atAbout}}current{{/if}}"><a href="/about">About</a></li>
      <li class="nav-item"><a href="/channels">Channel</a></li>
      <li class="nav-item"><a>Store</a></li>
      <li class="nav-item {{#if atContact}}current{{/if}}"><a href="/contact">Contact</a></li>
    </ul>
  </nav>
  
  <div class="row">
    <article class="large-12 columns">
      {{{body}}}
    </article>
  </div>
  
  <div class="row">
    <footer class="footer large-12 columns">
      <span class="contact-info"><a href="mailto:info@3digitalrockstudios.com">info@3digitalrockstudio.com</a> // 216.264.0098 // <a href="https://facebook.com/3digitalrockstudios">facebook.com/3digitalrockstudios</a> // <a href="http://youtube.com/3digitalrockstudios">youtube.com/3digitalrockstudios</a></span>
    </footer>
  </div>
  
  <!-- TODO: Load scripts based on page's needs -->
  <script src="/js/vendor/jquery.js"></script>
  <script src="/js/foundation.min.js"></script>
  <script>
      $(document).foundation();
  </script>
  
  {{#if atLogin}}
    <script src="https://js.authrocket.com/v1/authrocket.js" type="text/javascript"></script>
    <script type="text/javascript">
      AuthRocket.setInstanceUrl('https://3drsmain.e1.loginrocket.com/v1/');
      $(function(){
        $('#login-form').submit(function(event){
          AuthRocket.authenticate({
            username: $('#login-userid').val(),
            password: $('#login-password').val()
          });
          return false;
        });
      });
    </script>
  {{/if}}
  
  {{#if atRegister}}
    <script src="https://js.authrocket.com/v1/authrocket.js" type="text/javascript"></script>
    <script type="text/javascript">
      AuthRocket.setInstanceUrl('https://3drsmain.e1.loginrocket.com/v1/');
      $(function(){
        $('#register-form').submit(function(event){
          AuthRocket.signup({
            username: $("#register-username").val(),
            email: $("#register-email").val(),
            password: $("#register-password").val(),
            password_confirmation: $("#register-password2").val()
          });
          return false;
        });
      });
    </script>
  {{/if}}
  
	<script src="/fittext/jquery.fittext.js"></script>
	<script src="/responsive-nav/responsive-nav.min.js"></script>
  <script src="/js/sedimentary.js"></script>
  <!-- TODO: Move to custom scripts file -->
  <script src="/js/fill.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.23/angular.min.js"></script>
  <script src="/js/modules/common/api_client.js"></script>
  <script type="text/javascript">var nav = responsiveNav(".nav-collapse");jQuery(".nav-item").fitText();</script>
  {{#if atHome}}<script src="//vjs.zencdn.net/4.7/video.js"></script>
  <script src="/js/modules/home/home.ctrl.js" type="text/javascript"></script>
  <script type="text/javascript">
	  $(document).ready(function(){
	    jQuery(".wise-quotes").fitText(2, {maxFontSize: '80px'});
      /* Slider AutoChanging Title */
      function loadTitleAnimated(){
      	var myInterval;
      	var contador = 1;
      	var myFunc = function() {
      		var cur = $('.main-title ul li').length;
      		if(cur == contador) {
      				$('.main-title ul li.t-current').removeClass('t-current');
      				$('.main-title ul li').first().addClass('t-current');
      				contador = 1;
      			} else {
      				contador++;
      				$('.main-title ul li.t-current').removeClass('t-current').next().addClass('t-current');
      			}
      	};
      	myInterval = setInterval(myFunc, 5000); // Set Animation Interval in Miliseconds
      }
      loadTitleAnimated();
	  });
    videojs("video-bg").ready(function(){
      var myPlayer = this;
      myPlayer.muted(true);
    });
  </script>{{/if}}
</body>
</html>